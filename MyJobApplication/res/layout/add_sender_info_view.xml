<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/outer_gutter_size"
    android:layout_marginEnd="@dimen/outer_gutter_size"
    android:layout_marginTop="@dimen/outer_gutter_size"
    android:layout_marginBottom="@dimen/outer_gutter_size">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_sender_info_label"
        android:textSize="25dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/primary_button_text_color"/>
    <!-- First Name-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@string/first_name_label"
        style="@style/text_label_style1"/>
    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_entry_style1"/>
    <!-- Last Name-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@string/last_name_label"
        style="@style/text_label_style1"/>
    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_entry_style1"
        />
    <!-- Company Name-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        style="@style/text_label_style1"
        android:text="@string/company_label"/>
    <EditText
        android:id="@+id/et_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_entry_style1"/>
    <!-- Location -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        style="@style/text_label_style1"
        android:text="@string/location_label"/>
    <EditText
        android:id="@+id/et_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_entry_style1"/>
    <!-- Email id-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        style="@style/text_label_style1"
        android:text="@string/email_address_label"/>
    <EditText
        android:id="@+id/et_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_entry_style1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/button_add_sender_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_button_text"
            android:layout_marginRight="5dp"
            style="@style/button_theme1"/>
        <Button
            android:id="@+id/button_cancel_sender_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_button_text"
            android:layout_marginLeft="5dp"
            style="@style/button_theme1"/>
    </LinearLayout>
</RelativeLayout>